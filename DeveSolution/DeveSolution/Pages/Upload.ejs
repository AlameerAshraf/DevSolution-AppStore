	<title>DeveSolution - Developers App Store</title>
	<!-- Bootstrap Core CSS -->
	<link href="./css/bootstrap.min.css" rel="stylesheet">
	<!-- Custom CSS -->
	<link href="./css/modern-business.css" rel="stylesheet">
	<!-- Custom Fonts -->
	<script src="https://use.fontawesome.com/993c0d2f82.js"></script>
</head>

<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button> <a class="navbar-brand" href="index.html" style="font-weight:bold;">DeveSolution</a> </div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li> <a href="http://localhost:1337/about">About</a> </li>
						<% if (username) { %>
  							<li><a href="http://localhost:1337/login"><%= username %></a> </li>
						<% } %>
					<li> <a href="http://localhost:1337/Signup" style="color:aliceblue; font-weight:bold;">SignUp</a> </li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">
            Upload To DeveSolution Repo ! 
        		</h1> </div>
			<div class="col-md-6 col-md-offset-3 col-sm-offset-3">
				<div class="alert alert-danger alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button> <strong>Warning!</strong> Upload Instruction To make your effort great	
					<p>
						- Your Application should have a Code , if you find a code dublicated add the product or relase year to the code . 
					</p>
					<p>
						- don't forget to attach the image for your application and image for its vendor 
					</p>
					<p>
						- add one of the most public related site to the application (organzation , github)
					</p>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4><i class="fa fa-upload" aria-hidden="true"></i> Upload Appplication Here ! make sure it is useful !</h4> </div>
					<div class="panel-body">
						<form action="http://localhost:1337/UploadFile" enctype= "multipart/form-data" method="post" name="Uploading">
							<div class="form-group">
								<label >Application Code</label>
								<input name="Code" type="text" class="form-control " id="co" placeholder="App-Code" required> 
							</div>
							<div class="form-group">
								<label >Vendor</label>
								<input name="Vendor"  type="text" class="form-control " id="Vendor" placeholder="Microsoft" required> 
							</div>
							<div class="form-group">
								<label>Vendor Popular Site</label>
								<input name="Vsite" type="text" class="form-control" id="Vsite" placeholder="https://code.visualstudio.com/" onchange="ValidSite()" required> 
							</div>
							<div class="form-group">
								<label>Vendor Logo</label>
								<input name="VLogo" type="file" class="form-control" id="VLogo" required> 
							</div>
							<div class="form-group">
								<label>Application Source</label>
								<input name="Source" type="file" class="form-control" id="Source" required> 
							</div>
							<div class="form-group">
								<label>Application Logo</label>
								<input name="ALogo" type="file" class="form-control" id="ALogo" required> 
							</div>
							
							
							<input type="submit" ng-disabled="form.unn.$dirty && form.unn.$invalid ||  
												form.mail.$dirty && form.mail.$invalid ||
												form.job.$dirty && form.job.$invalid" class="btn btn-danger"> </form>
					</div>
				</div>
			</div>
		</div>
		<hr>
			<footer>
			<div class="row">
				<div class="col-lg-12">
					<p style="text-align:center;">Copyright &copy; DeveSolution 2017  |  Less Navigation, All In One !</p>				
				</div>
			</div>
		</footer>
	</div>
	<script src="./js/jquery.js"></script>
	<script src="./js/bootstrap.min.js"></script>
	<script src="./js/angular.min.js"></script>
	<script src="./Controllers/Validation-Signup.js"></script>
</body>

</html>